  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/utils/tests/iwutils_test1",
      "cwd": "${workspaceFolder}/build/src/utils/tests",
      "args": ["-t"],
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": false,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "text": "set follow-fork-mode child"
        },
        {
          "text": "set detach-on-fork off"
        }
