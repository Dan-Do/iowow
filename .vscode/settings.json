{
  "files.insertFinalNewline": false,
  "cmake.configureArgs": [
    "-DBUILD_TESTS=ON",
    "-DCMAKE_C_COMPILER=clang",
    "-DCMAKE_VERBOSE_MAKEFILE:BOOL=OFF",
    "-DBUILD_SHARED_LIBS=ON"
  ],
  "cmake.ctestArgs": [],
  "C_Cpp.formatting": "disabled",
  "C_Cpp.autocomplete": "Default",
  "C_Cpp.addWorkspaceRootToIncludePath": false,
  "astyle.astylerc": "${workspaceRoot}/.astylerc",
  "astyle.c.enable": true,
  "astyle.cpp.enable": true,
  "clang-format.language.c.enable": false,
  "clang.completion.enable": true,
  "clang.diagnostic.enable": true,
  "clang.cflags": [
    "-std=gnu11",
    "-Wc99-compat",
    "-Wall",
    "-Wcast-qual",
    "-Wunused",
    "-Wnonportable-system-include-path",
    "-I${workspaceRoot}/src",
    "-I${workspaceRoot}/build/src/generated"
  ],
  "clang.cxxflags": [
    "-std=c++11",
    "-Wall",
    "-Wcast-qual",
    "-Wunused",
    "-Wnonportable-system-include-path",
    "-I${workspaceRoot}/src",
    "-I${workspaceRoot}/build/src/generated"
  ]
}

